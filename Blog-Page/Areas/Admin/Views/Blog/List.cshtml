@using Blog_Page.Models;
@model List<Blog>

<div class="main-panel">
    <div class="content-wrapper">
        < <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listeleme Sayfası</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık</th>
                                <th> Oluşturulma Tarihi </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td> @(i + 1) </td>
                                    <td> @Model[i].Title </td>
                                    <td>@Model[i].CreatedDate</td>
                                    <td>
                                        <a class="big-icon" asp-controller="Blog" asp-action="Edit" asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                                        <a class="big-icon margin-icon" asp-controller="Blog" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="bi bi-x-circle-fill"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


