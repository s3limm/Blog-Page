@using Blog_Page.Models;
@model List<BlogListModel>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Blog Listeleme Sayfası</h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Blog Adı </th>
                                <th> Oluşturulma Tarihi </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td> @(i + 1) </td>
                                    <td> @Model[i].Title </td>
                                    <td> @Model[i].CreatedDate</td>
                                    <td>
                                        <a class="big-icon" asp-controller="Blog" asp-action="Edit" asp-route-id="@Model[i].ID"><button type="button" class="btn btn-warning">Güncelle</button></a>
                                        <a class="big-icon margin-icon" asp-controller="Blog" asp-action="Delete" asp-route-id="@Model[i].ID"> <button type="button" class="btn btn-danger">Sil</button></a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>