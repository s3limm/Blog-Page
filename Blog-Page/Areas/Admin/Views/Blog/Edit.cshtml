@using Blog_Page.Models;
@model UpdateBlogPostModel


<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Update Blog </h2>
        </div>
        <div class="card-body">
            <form method="post" asp-area="Admin" asp-controller="Blog" asp-action="Edit" class="forms-sample" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Title">Title</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Title" placeholder="Title" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description">Description</label>
                    <input type="text" class="form-control" id="basic-default-company" asp-for="Description" placeholder="Description" />
                </div>

                <div class="mt-2 mb-3">
                    <label asp-for="CategoryID" class="form-label">Select Category</label>
                    <select asp-for="CategoryID" id="largeSelect" class="form-select form-select-lg" asp-items="@(new SelectList(Model.Categories, "Value", "Text"))" class="form-control">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label asp-for="FileData" class="form-label">Choose File</label>
                    <input asp-for="FileData" class="form-control" type="file" id="formFileMultiple" multiple"/>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content">Content</label>
                    <textarea class="form-control" rows="4" id="summernote" asp-for="Content"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>




<!--Summer Note-->

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<div id="summernote"></div>
<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
