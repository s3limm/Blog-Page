@using Blog_Page.Models;
@model UpdateUserModel

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Update User</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-area="Admin" asp-controller="User" asp-action="Edit" class="forms-sample">
                <div class="mb-3">
                    <label class="form-label" asp-for="userName">Name</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="userName" placeholder="Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="text" class="form-control" id="basic-default-company" asp-for="Email" placeholder="Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input type="text" class="form-control" id="basic-default-company" asp-for="Password" placeholder="Password" />
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>

