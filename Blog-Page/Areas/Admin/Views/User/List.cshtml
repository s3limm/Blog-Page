@using Blog_Page.Models;
@model List<UserListModel>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Users List</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="col-12 col-lg-4 col-md-8"> Name </th>
                                <th class="col-12 col-lg-4 col-md-8"> Email </th>
                                <th class="col-12 col-lg-4 col-md-8"> Transactions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Model[i].userName</td>
                                    <td>@Model[i].Email</td>
                                    <td>
                                        <a class="big-icon" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@Model[i].ID"><button type="button" class="btn btn-warning">Update</button></a>
                                        <a class="big-icon margin-icon" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@Model[i].ID"><button type="button" class="btn btn-danger">Delete</button></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
