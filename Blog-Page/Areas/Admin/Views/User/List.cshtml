@using Blog_Page.Models;
@model List<UserListModel>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Kullanıcı Listesi</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Kullanıcı Adı </th>
                                <th> Email </th>
                                <th> Kullanıcı Tipi </th>
                                <th> Oluşturulma Tarihi </th>
                                <th> İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Model[i].userName</td>
                                    <td>@Model[i].Email</td>
                                    <td>@Model[i].AppRole.Definition</td>
                                    <td>@Model[i].CreatedDate</td>
                                    <td>
                                        <a class="big-icon" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@Model[i].ID"><button type="button" class="btn btn-warning">Güncelle</button></a>
                                        <a class="big-icon margin-icon" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@Model[i].ID"><button type="button" class="btn btn-danger">Sil</button></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
