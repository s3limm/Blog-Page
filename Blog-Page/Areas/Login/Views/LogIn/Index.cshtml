<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form asp-controller="LogIn" asp-action="LogIn">
            <h1>Hesap oluştur</h1>
            <input type="text" placeholder="İsim" />
            <input type="email" placeholder="Email" />
            <input type="password" placeholder="Şifre" />
            <button type="submit">Oluştur</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form action="#">
            <h1>Giriş Yap</h1>
            <input type="email" placeholder="Email" />
            <input type="password" placeholder="Şifre" />
            <a href="#">Şifreni mi unuttun?</a>
            <button>Giriş Yap</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Tekrardan Hoşgeldin!</h1>
                <p>Bizimle iletişimde kal ve bilgilerinle giriş yap</p>
                <button class="ghost" id="signIn">Giriş Yap</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Merhaba, Dostum!</h1>
                <p>Bilgilerini gir ve bizimle yolculuğa çık.</p>
                <button class="ghost" id="signUp">Oluştur</button>
            </div>
        </div>
    </div>
</div>


